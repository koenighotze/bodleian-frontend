{
  "name": "bodleian-frontend",
  "version": "0.1.1",
  "scripts": {
    "build": "vite build",
    "dev": "turbo --no-cache start test-watch",
    "format-fix": "prettier --write .",
    "format": "prettier --check .",
    "lint-css-fix": "stylelint --fix '**/*.css'",
    "lint-css": "stylelint -f verbose '**/*.css'",
    "lint-fix": "eslint --fix ./src",
    "lint-md": "remark .",
    "lint-md-fix": "remark . --output",
    "lint": "TIMING=1 eslint ./src",
    "serve": "vite preview",
    "start": "vite --cors",
    "test": "jest --watchAll=false --coverage --testMatch=**/*.unit.test.js",
    "test-watch": "jest --watchAll=true --testMatch=**/*.unit.test.js",
    "turbo": "turbo build lint lint-css lint-md test format",
    "turbo-clean": "npm run format-fix && turbo lint-fix lint-md-fix lint-css-fix"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "i18next": "^22.4.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^12.1.1",
    "react-router-dom": "^6.5.0",
    "react-transition-group": "^4.4.5",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@vitejs/plugin-react": "^3.0.0",
    "babel-jest": "^29.3.1",
    "babel-plugin-macros": "^3.1.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-functional": "^4.1.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "jest": "^29.3.1",
    "prettier": "^2.5.1",
    "react-test-renderer": "^18.2.0",
    "remark-cli": "^11.0.0",
    "remark-preset-lint-recommended": "^6.1.2",
    "stylelint": "^14.16.0",
    "stylelint-config-standard": "^24.0.0",
    "turbo": "^1.6.3",
    "vite": "^4.0.1",
    "vite-plugin-svgr": "^2.4.0",
    "vite-tsconfig-paths": "^4.0.2",
    "vitest": "^0.26.1"
  }
}
